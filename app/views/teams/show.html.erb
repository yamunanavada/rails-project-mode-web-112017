<h2><%= @team.name %></h2>

<p><strong>League: </strong> <%= link_to @team.league.name, @team.league %></p>
<p><strong>War Chest: </strong> <%= @team.war_chest%> snowballs</p>

<p><strong>Players: </strong></p>

<ul><% @team.players.each do |player| %>
  <li><%= link_to player.name, player %> | <%= link_to "Sell Player", delete_team_player_path(player.team_players.find_by(team_id: @team.id)), method: :delete%></li>
<% end %></ul>

<% if @team.players.length < 11 %>
  <p><strong>Add Player To This Team: </strong>
    <%= form_for @team_player do |f| %>
        <%= f.hidden_field :team_id, value: @team.id %>
        <%= f.label :"Select a Player" %>
        <%= f.collection_select :player_id, @players, :id, :name %><br>
        <%= f.submit "Add Player" %>
    <% end %></p>
<% end %>


<%= link_to "View All Players", players_path %>



<p><strong>Snowball Fights Played: </strong>
  <ul><% @team.games.each do |game| %>
    <li>Opponent: <%=game.opponent.name %> - Winner: </li>
  <% end %></ul>


<p><strong>Start a Fight: </strong>
  <%= form_for @game do |f| %>
      <%= f.hidden_field :team_id, value: @team.id %>
      <%= f.label :"Select an Opponent" %>
      <%= f.collection_select :opponent_id, @opponents, :id, :name %><br>
      <%= f.submit "Snowball Fight!" %>
  <% end %></p>
