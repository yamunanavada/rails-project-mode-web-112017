<!DOCTYPE html>
<html>
  <head>
    <title>SnowballFight</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Snowball Fight</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if current_user%>

          <li class="nav-item">
            <a class="nav-link" href="<%=leagues_path%>">Leagues</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%=user_path(current_user)%>">Your Account</a>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Out", sessions_path, method: :delete, class: "nav-link" %>
          </li>
          <% end %>
      </ul>

    </div>
  </nav>


        <%= yield %>




  </body>
</html>
