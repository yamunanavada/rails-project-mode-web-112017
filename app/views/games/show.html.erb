<h2>Snowball Fight Commence!</h2>
<h3><%= link_to @game.team.name, @game.team %> vs. <%= link_to @game.opponent.name, @game.opponent %></h3>

<% if @winner.class == Team %>
  <h3>The Winner is <%=@winner.name %>!!!</h3>
  <p>Total prize money: <%= @game.aggregate_scores %></p>
<% else %>
  <h3> Tie!! </h3>
<% end %>

<p><strong> Total Hits</strong> <br>
  <%=@game.team.name%>: <%= @team.hits(@game)  %> hits<br>
  <%=@game.opponent.name%>: <%= @opponent.hits(@game) %> hits</p>



<p><strong> <%= @game.team.name %> Players:</strong></p>
<ul><% @game.team.players.each do |player| %>
  <li><%=link_to player.name, player %> | Snowballs Thrown: <%= player.scores.find_by(game_id: @game.id).balls_thrown %> | Hits: <%= player.scores.find_by(game_id: @game.id).hits %></li>
<% end %></ul>

<p><strong> <%= @game.opponent.name %> Players:</strong></p>
<ul><% @game.opponent.players.each do |player| %>
  <li><%=link_to player.name, player %> | Snowballs Thrown: <%= player.scores.find_by(game_id: @game.id).balls_thrown %> | Hits: <%= player.scores.find_by(game_id: @game.id).hits %></li>
<% end %></ul>
