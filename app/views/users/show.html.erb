
<h3><%= flash[:msg] %></h3>
<div class='tile' id='headers'>
  <h1><%= @user.name %></h1>

  <p><strong> Username: </strong> <%=@user.username %></p>
</div>

<div class='tile'>
  
  <% if @user.teams != [] %>
  <p><strong> Your Leagues: </strong></p>
    <ul><% @user.teams.each do |team| %>
      <li><%= link_to team.league.name, team.league %> | <%= link_to team.name, team %> </li>
    <% end %> </ul>
  <%else %>
    <p><strong> Your Leagues: </strong><%= "You have not yet joined a league." %></p>
    <% end %>
  <% if @user == current_user %>
    <a class="btn btn-default bg-light" href="<%=new_team_path%>" role="button">Create Team</a>
    <a class="btn btn-default bg-light" href="<%=edit_user_path(@user)%>" role="button">Edit Account</a>

  <% end %>
</div>
